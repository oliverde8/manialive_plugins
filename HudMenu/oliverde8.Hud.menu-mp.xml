		<!--Set the Opening Direction -->
		<VerticalDirection>1</VerticalDirection><!-- 0: Down, 1: Up -->
		<HorizentalDirection>1</HorizentalDirection><!-- 0: Right, 1: Left -->

		<!-- When you click on a button that doesen't open a sub menu should it close all the menu -->
		<closeOnClick>true</closeOnClick>
		
		<Menu>
